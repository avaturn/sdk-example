{
  "$schema": "https://codesandbox.io/schemas/tasks.json",
  "setupTasks": [
    {
      "name": "Install Dependencies",
      "command": "yarn install"
    }
  ],

  "tasks": {
    "dev-server": {
      "name": "Vanilla",
      "command": "yarn workspace vanilla dev",
      "runAtStart": true,
      "preview": {
        "port": 5173
      }
    },
    "react": {
      "name": "React with SDK",
      "command": "yarn workspace react dev",
      "runAtStart": true,
      "preview": {
        "port": 5174
      }
    }
  }
}
